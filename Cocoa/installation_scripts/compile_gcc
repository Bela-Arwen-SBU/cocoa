if [ -z "${ROOTDIR}" ]; then
    echo 'ERROR ROOTDIR not defined'
    return
fi
if [ -z "${CXX_COMPILER}" ]; then
    echo 'ERROR CXX_COMPILER not defined'
    return
fi
if [ -z "${C_COMPILER}" ]; then
    echo 'ERROR C_COMPILER not defined'
    return
fi
if [ -z "${FORTRAN_COMPILER}" ]; then
    echo 'ERROR C_COMPILER not defined'
    return
fi
if [ -z "${CMAKE}" ]; then
    echo 'ERROR CMAKE not defined'
    return
fi
if [ -z "${MAKE_NUM_THREADS}" ]; then
    echo 'ERROR MAKE_NUM_THREADS not defined'
    return
fi

if [ -z "${IGNORE_GCC_INSTALLATION}" ]; then
    echo 'INSTALLING GCC - THAT MIGHT TAKE A WHILE'

    cd $ROOTDIR/../cocoa_installation_libraries/

    mkdir objdir

    cd objdir/

    $ROOTDIR/../cocoa_installation_libraries/gcc-10.1.0/configure --prefix=$ROOTDIR/.local/GCC --enable-languages=c,c++,fortran

    make -j $MAKE_NUM_THREADS > /dev/null

    make install > /dev/null

    cd $ROOTDIR
fi